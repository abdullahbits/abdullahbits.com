---
import { FileText, Github, GraduationCap, Linkedin, Rss } from "lucide-preact";
import dissertationFile from "@/assets/dissertation.pdf";
import resumeFile from "@/assets/resume.pdf";
import selfImage from "@/assets/self.png";
import { GITHUB_HANDLE, LINKEDIN_HANDLE, X_HANDLE } from "@/consts";
import { buttonVariants } from "@/lib/button-utils";
import { cn } from "@/lib/utils";
---

<div class="space-y-4">
  <div class="flex items-start gap-4">
    <img
      src={selfImage.src}
      alt="Abdullah Elsayed"
      class="h-24 w-24 shrink-0 rounded-lg object-cover sm:h-28 sm:w-28"
    />
    <div class="flex-1 space-y-2">
      <h1 class="text-2xl font-bold sm:text-3xl">Hi, I'm Abdullah</h1>
      <p class="text-muted-foreground leading-relaxed">
        Software engineer building voice AI platforms, agentic coding tools, and
        DSLs. Experience includes real-time speech-to-speech agents, scalable
        backends, and modern web apps. Passionate about programming languages,
        program synthesis, and human-computer interaction.
      </p>
    </div>
  </div>
  <div class="flex flex-col gap-2">
    <div class="space-y-2">
      <h2 class="text-sm font-medium text-muted-foreground">Connect</h2>
      <div class="flex items-center gap-1">
        <a
          href=`https://github.com/${GITHUB_HANDLE}`
          target="_blank"
          class={cn(
            buttonVariants({ variant: "outline", size: "icon" }),
            "h-8 w-8"
          )}
        >
          <Github class="size-3.5" />
          <span class="sr-only">Github</span>
        </a>
        <a
          href=`https://x.com/${X_HANDLE}`
          target="_blank"
          class={cn(
            buttonVariants({ variant: "outline", size: "icon" }),
            "h-8 w-8"
          )}
        >
          <svg
            class="size-3.5 fill-foreground"
            role="img"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
            ><title>X</title><path
              d="M18.901 1.153h3.68l-8.04 9.19L24 22.846h-7.406l-5.8-7.584-6.638 7.584H.474l8.6-9.83L0 1.154h7.594l5.243 6.932ZM17.61 20.644h2.039L6.486 3.24H4.298Z"
            ></path></svg
          >
          <span class="sr-only">X</span>
        </a>
        <a
          href=`https://linkedin.com/in/${LINKEDIN_HANDLE}`
          target="_blank"
          class={cn(
            buttonVariants({ variant: "outline", size: "icon" }),
            "h-8 w-8"
          )}
        >
          <Linkedin class="size-3.5" />
          <span class="sr-only">LinkedIn</span>
        </a>
        <a
          href="/rss.xml"
          target="_blank"
          class={cn(
            buttonVariants({ variant: "outline", size: "icon" }),
            "h-8 w-8"
          )}
        >
          <Rss class="size-3.5" />
          <span class="sr-only">RSS</span>
        </a>
      </div>
    </div>
    <div class="space-y-2">
      <h2 class="text-sm font-medium text-muted-foreground">Documents</h2>
      <div class="flex items-center gap-1">
        <a
          href={resumeFile}
          target="_blank"
          class={buttonVariants({ variant: "outline", size: "sm" })}
        >
          <FileText class="mr-2 size-3.5" />
          Resume
        </a>
        <a
          href={dissertationFile}
          target="_blank"
          class={buttonVariants({ variant: "outline", size: "sm" })}
        >
          <GraduationCap class="mr-2 size-3.5" />
          Master's Dissertation
        </a>
      </div>
    </div>
  </div>
</div>
