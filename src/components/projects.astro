---
import type { CollectionEntry } from "astro:content";

export interface Props {
  projects: CollectionEntry<"project">[];
}

const { projects } = Astro.props;
---

<section class="flex flex-col gap-4">
  <h2 class="font-medium text-2xl">Projects</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-2">
    {projects.map((project) => (
      <a href={project.data.link} target="_blank">
        <div class="flex flex-col p-6 gap-y-2 justify-between min-h-full rounded-lg border bg-card text-card-foreground shadow-sm">
          <div class="flex flex-col gap-y-2">
            <h3 class="text-2xl font-semibold leading-none tracking-tight">
              {project.data.title}
            </h3>
            <p class="text-sm text-muted-foreground">{project.data.description}</p>
          </div>
          <ul class="text-sm text-muted-foreground flex gap-2">
            {project.data.tags.map((tag) => (<li class="underline underline-offset-2">{tag}</li>))}
          </ul>
        </div>
      </a>
    ))}
  </div>
</section>
