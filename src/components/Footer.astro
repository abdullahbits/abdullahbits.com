---
import MdiTwitter from "~icons/mdi/twitter";
import MdiGithub from "~icons/mdi/github";
import MdiRss from "~icons/mdi/rss";
import MdiSitemap from "~icons/mdi/sitemap";

const today = new Date();
---

<footer class="flex items-center justify-between py-5">
  <p class="text-sm">&copy; {today.getFullYear()} Abdullah Elsayed</p>
  <div class="flex items-center">
    <a
      href="https://twitter.com/abdllah_dev"
      target="_blank"
      class="w-7 h-7 flex items-center justify-center rounded-md p-1.5 hover:bg-neutral-300 dark:hover:bg-neutral-800"
    >
      <MdiTwitter />
      <span class="sr-only">Twitter</span>
    </a>
    <a
      href="https://github.com/abdllahdev"
      target="_blank"
      class="w-7 h-7 flex items-center justify-center rounded-md p-1.5 hover:bg-neutral-300 dark:hover:bg-neutral-800"
    >
      <MdiGithub />
      <span class="sr-only">Github</span>
    </a>
    <a
      href="/rss.xml"
      target="_blank"
      class="w-7 h-7 flex items-center justify-center rounded-md p-1.5 hover:bg-neutral-300 dark:hover:bg-neutral-800"
    >
      <MdiRss />
      <span class="sr-only">RSS</span>
    </a>
    <a
      href="/sitemap-index.xml"
      target="_blank"
      class="w-7 h-7 flex items-center justify-center rounded-md p-1.5 hover:bg-neutral-300 dark:hover:bg-neutral-800"
    >
      <MdiSitemap />
      <span class="sr-only">Sitemap</span>
    </a>
  </div>
</footer>
