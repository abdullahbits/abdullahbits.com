---
import { buttonVariants } from "@/lib/button-utils";
import BaseLayout from "@/layouts/base-layout.astro";
import { cn } from "@/lib/utils";
import { ArrowLeft } from "lucide-preact";
---

<BaseLayout title="404: Not found">
  <div class="flex h-full flex-col items-center justify-center space-y-4">
    <div class="flex flex-col items-center space-y-2">
      <span class="text-9xl font-black">404</span>
      <span class="text-3xl font-semibold">Oops, page not found</span>
    </div>
    <a href="/" class={cn(buttonVariants({ size: "sm" }), "space-x-1")}>
      <ArrowLeft class="h-4 w-4" />
      <span>Go back</span>
    </a>
  </div>
</BaseLayout>
