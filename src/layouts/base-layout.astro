---
import "@/styles/globals.css";
import BaseHead from "@/components/base-head.astro";
import Header from "@/components/header.astro";
import Footer from "@/components/footer.astro";

export interface Props {
  title?: string;
  description?: string;
  postMeta?: {
    pubDate: Date;
    tags: string[];
  };
}

const { title, description, postMeta } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} postMeta={postMeta} />
  </head>
  <body class="relative flex h-screen flex-col justify-between space-y-10">
    <Header />
    <main class="container mx-auto grow px-4 pt-16 md:max-w-5xl">
      <slot />
    </main>
    <Footer />
  </body>
</html>
